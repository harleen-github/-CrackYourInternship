class Solution {
public:
    int m,n;
    vector<int>dx={1,-1,0,0};
    vector<int>dy={0,0,1,-1};
    bool find(vector<vector<char>>& board, string word,int i,int j,int idx )
    {  
        if(idx==word.length())return true;

        if(i<0 || i>=m || j<0 || j>=n || board[i][j]=='$')return false;
        if(board[i][j]!=word[idx])return false;

        char temp=board[i][j];
        board[i][j]='$';

        for(int x=0;x<4;x++)
        {
            int newx=i+dx[x];
            int newy=j+dy[x];
           if( find(board,word,newx,newy,idx+1))
           return true;
         }
         board[i][j]=temp;
         return false;

    }
    bool exist(vector<vector<char>>& board, string word) {
        m=board.size();
        n=board[0].size();
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
            {
                if(board[i][j]==word[0] && find(board,word,i,j,0))
                return true;
            }
        }
        return false;
    }
};
