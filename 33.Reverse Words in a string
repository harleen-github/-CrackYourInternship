#include <sstream>
#include <string>
#include <algorithm>

class Solution {
public:
    std::string reverseWords(std::string s) {
        std::stringstream ss(s);
        std::string token;
        std::string ans;
        std::string temp;
        
        // Extract words and build the reversed string
        while (ss >> token) {
            if (!ans.empty()) {
                ans = token + ' ' + ans;
            } else {
                ans = token;
            }
        }
        
        return ans;
    }
};
