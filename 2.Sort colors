class Solution {
public:
    void sortColors(vector<int>& nums) {
        int i=0,j=0;
        
        int n=nums.size();
        int k=n-1;
        while(i<=k)
        {
            if(nums[i]==0)
            {
                swap(nums[i],nums[j]);
                i++;
                j++;

            }
            else if(nums[i]==1)
            {
                i++;
            }
            else if(nums[i]==2){
                swap(nums[i],nums[k]);
                k--;
            }
        }
    }
};
