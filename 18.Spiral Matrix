class Solution {
public:
    vector<int> spiralOrder(vector<vector<int>>& matrix) {
        int m=matrix.size();
        int n=matrix[0].size();
        int sr=0,er=m-1,sc=0,ec=n-1;
        int i=0;
        int total=m*n;
        vector<int>ans;
        while(i<total)
        {
             for(int j=sc;j<=ec;j++)
             {
                ans.push_back(matrix[sr][j]);
                i++;
             }
             sr++;
             for(int j=sr;j<=er;j++)
             {
                ans.push_back(matrix[j][ec]);
                i++;
             }
             ec--;

             if(sr<=er){
             for(int j=ec;j>=sc;j--)
             {
                ans.push_back(matrix[er][j]);
                i++;
             }
             er--;
             }
             if(sc<=ec){
             for(int j=er;j>=sr;j--)
             {
                ans.push_back(matrix[j][sc]);
                i++;
             }
             sc++;
             }
        }
        return ans;
    }
};
